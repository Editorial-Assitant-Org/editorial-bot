{
  "manifest_version": 3,
  "name": "Editorial Assistant",
  "version": "1.1",
  "description": "Extracts manuscript details from emails and copies them to the clipboard.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon16.png",
      "48": "icon16.png",
      "128": "icon16.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true
    }
  ]
}
